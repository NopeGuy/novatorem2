                .bar:nth-child(21) { left: 102px; animation: pulse 1.2s ease-in-out infinite alternate; animation-delay: 0.6s; }
                .bar:nth-child(22) { left: 107px; animation: pulse 1.5s ease-in-out infinite alternate; animation-delay: 0.7s; }
                .bar:nth-child(23) { left: 112px; animation: pulse 1.1s ease-in-out infinite alternate; animation-delay: 0.8s; }
                .bar:nth-child(24) { left: 117px; animation: pulse 1.3s ease-in-out infinite alternate; animation-delay: 0.9s; }
                .bar:nth-child(25) { left: 122px; animation: pulse 1.2s ease-in-out infinite alternate; animation-delay: 1.0s; }
                .bar:nth-child(26) { left: 127px; animation: pulse 1.4s ease-in-out infinite alternate; animation-delay: 1.1s; }
                .bar:nth-child(27) { left: 132px; animation: pulse 1.1s ease-in-out infinite alternate; animation-delay: 1.2s; }
                .bar:nth-child(28) { left: 137px; animation: pulse 1.3s ease-in-out infinite alternate; animation-delay: 1.3s; }
                .bar:nth-child(29) { left: 142px; animation: pulse 1.2s ease-in-out infinite alternate; animation-delay: 1.4s; }
                .bar:nth-child(30) { left: 147px; animation: pulse 1.5s ease-in-out infinite alternate; animation-delay: 0.1s; }
                .bar:nth-child(31) { left: 152px; animation: pulse 1.1s ease-in-out infinite alternate; animation-delay: 0.2s; }
                .bar:nth-child(32) { left: 157px; animation: pulse 1.3s ease-in-out infinite alternate; animation-delay: 0.3s; }
                .bar:nth-child(33) { left: 162px; animation: pulse 1.2s ease-in-out infinite alternate; animation-delay: 0.4s; }
                .bar:nth-child(34) { left: 167px; animation: pulse 1.4s ease-in-out infinite alternate; animation-delay: 0.5s; }
                .bar:nth-child(35) { left: 172px; animation: pulse 1.1s ease-in-out infinite alternate; animation-delay: 0.6s; }

                @keyframes pulse {
                    0% {
                        height: 3px;
                        background-color: #00ffff;
                    }
                    100% {
                        height: 16px;
                        background-color: #ffffff;
                    }
                }
            </style>

            <div class="window-title">
                ♪ Spotify Now Playing
                <div class="window-controls">_ □ ×</div>
            </div>

            <div class="main">
                <a class="art" href="{{songURI}}" target="_blank">
                    <center>
                        <img src="data:image/png;base64, {{image}}" class="cover" />
                    </center>
                </a>

                <div class="content">
                    <div>
                        <a href="{{songURI}}" target="_blank">
                            <div class="song">{{songName}}</div>
                        </a>
                        <a href="{{artistURI}}" target="_blank">
                            <div class="artist">{{artistName}}</div>
                        </a>
                    </div>
                    
                    <div class="volume-control">
                        <div id="bars">
                            <div class="bar"></div><div class="bar"></div><div class="bar"></div><div class="bar"></div><div class="bar"></div>
                            <div class="bar"></div><div class="bar"></div><div class="bar"></div><div class="bar"></div><div class="bar"></div>
                            <div class="bar"></div><div class="bar"></div><div class="bar"></div><div class="bar"></div><div class="bar"></div>
                            <div class="bar"></div><div class="bar"></div><div class="bar"></div><div class="bar"></div><div class="bar"></div>
                            <div class="bar"></div><div class="bar"></div><div class="bar"></div><div class="bar"></div><div class="bar"></div>
                            <div class="bar"></div><div class="bar"></div><div class="bar"></div><div class="bar"></div><div class="bar"></div>
                            <div class="bar"></div><div class="bar"></div><div class="bar"></div><div class="bar"></div><div class="bar"></div>
                        </div>
                    </div>
                    
                    <div class="status-bar">{{status}}</div>
                </div>
            </div>
        </div>
    </foreignObject>
</svg>
