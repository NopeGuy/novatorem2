<svg width="440" height="120" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
    <foreignObject width="440" height="120">
        <div xmlns="http://www.w3.org/1999/xhtml" class="container">
            <style>
                .main {
                    display: flex;
                    height: 100px;
                }

                .container {
                    background-color: #c0c0c0;
                    border: 2px outset #c0c0c0;
                    padding: 6px;
                    font-family: 'MS Sans Serif', sans-serif;
                    box-shadow: inset -1px -1px #808080, inset 1px 1px #dfdfdf, inset -2px -2px #808080, inset 2px 2px #dfdfdf;
                }

                .art {
                    width: 27%;
                    float: left;
                    margin-right: 6px;
                }

                .content {
                    width: 71%;
                    display: flex;
                    flex-direction: column;
                    justify-content: space-between;
                }

                .cover {
                    width: 85px;
                    height: 85px;
                    border: 1px inset #c0c0c0;
                    box-shadow: inset -1px -1px #dfdfdf, inset 1px 1px #808080;
                }

                .song {
                    color: #000080;
                    font-size: 14px;
                    font-weight: bold;
                    margin: 3px 0;
                    overflow: hidden;
                    white-space: nowrap;
                    text-overflow: ellipsis;
                    text-decoration: underline;
                    cursor: pointer;
                }

                .artist {
                    color: #000000;
                    font-size: 12px;
                    margin: 2px 0;
                    overflow: hidden;
                    white-space: nowrap;
                    text-overflow: ellipsis;
                }

                .status-bar {
                    background-color: #c0c0c0;
                    border: 1px inset #c0c0c0;
                    padding: 2px 4px;
                    font-size: 10px;
                    color: #000000;
                    margin-top: 3px;
                    box-shadow: inset -1px -1px #dfdfdf, inset 1px 1px #808080;
                }

                .volume-control {
                    display: flex;
                    align-items: center;
                    margin-top: 3px;
                }

                .volume-label {
                    font-size: 10px;
                    color: #000000;
                    margin-right: 4px;
                }

                #bars {
                    width: 180px;
                    height: 18px;
                    background-color: #008080;
                    border: 1px inset #c0c0c0;
                    position: relative;
                    overflow: hidden;
                    box-shadow: inset -1px -1px #dfdfdf, inset 1px 1px #808080;
                }

                .bar {
                    width: 3px;
                    position: absolute;
                    bottom: 1px;
                    background-color: #00ffff;
                    border-right: 1px solid #008080;
                }

                .window-title {
                    background: linear-gradient(90deg, #000080 0%, #000040 100%);
                    color: white;
                    font-size: 10px;
                    font-weight: bold;
                    padding: 2px 4px;
                    margin: -6px -6px 3px -6px;
                    border-bottom: 1px solid #808080;
                }

                .window-controls {
                    float: right;
                    color: white;
                    font-size: 9px;
                }

                a {
                    text-decoration: none;
                }

                a:hover .song {
                    background-color: #000080;
                    color: white;
                    text-decoration: none;
                }

                .button {
                    background-color: #c0c0c0;
                    border: 1px outset #c0c0c0;
                    padding: 2px 5px;
                    font-size: 10px;
                    color: #000000;
                    cursor: pointer;
                    margin-right: 2px;
                    box-shadow: inset -1px -1px #808080, inset 1px 1px #dfdfdf;
                }

                .button:active {
                    border: 1px inset #c0c0c0;
                    box-shadow: inset 1px 1px #808080, inset -1px -1px #dfdfdf;
                }

                /* Individual bar animations with staggered delays */
                .bar:nth-child(1) { left: 2px; animation: pulse 1.2s ease-in-out infinite alternate; animation-delay: 0s; }
                .bar:nth-child(2) { left: 7px; animation: pulse 1.3s ease-in-out infinite alternate; animation-delay: 0.1s; }
                .bar:nth-child(3) { left: 12px; animation: pulse 1.1s ease-in-out infinite alternate; animation-delay: 0.2s; }
                .bar:nth-child(4) { left: 17px; animation: pulse 1.4s ease-in-out infinite alternate; animation-delay: 0.3s; }
                .bar:nth-child(5) { left: 22px; animation: pulse 1.2s ease-in-out infinite alternate; animation-delay: 0.4s; }
                .bar:nth-child(6) { left: 27px; animation: pulse 1.5s ease-in-out infinite alternate; animation-delay: 0.5s; }
                .bar:nth-child(7) { left: 32px; animation: pulse 1.1s ease-in-out infinite alternate; animation-delay: 0.6s; }
                .bar:nth-child(8) { left: 37px; animation: pulse 1.3s ease-in-out infinite alternate; animation-delay: 0.7s; }
                .bar:nth-child(9) { left: 42px; animation: pulse 1.2s ease-in-out infinite alternate; animation-delay: 0.8s; }
                .bar:nth-child(10) { left: 47px; animation: pulse 1.4s ease-in-out infinite alternate; animation-delay: 0.9s; }
                .bar:nth-child(11) { left: 52px; animation: pulse 1.1s ease-in-out infinite alternate; animation-delay: 1.0s; }
                .bar:nth-child(12) { left: 57px; animation: pulse 1.3s ease-in-out infinite alternate; animation-delay: 1.1s; }
                .bar:nth-child(13) { left: 62px; animation: pulse 1.2s ease-in-out infinite alternate; animation-delay: 1.2s; }
                .bar:nth-child(14) { left: 67px; animation: pulse 1.5s ease-in-out infinite alternate; animation-delay: 1.3s; }
                .bar:nth-child(15) { left: 72px; animation: pulse 1.1s ease-in-out infinite alternate; animation-delay: 1.4s; }
                .bar:nth-child(16) { left: 77px; animation: pulse 1.3s ease-in-out infinite alternate; animation-delay: 0.1s; }
                .bar:nth-child(17) { left: 82px; animation: pulse 1.2s ease-in-out infinite alternate; animation-delay: 0.2s; }
                .bar:nth-child(18) { left: 87px; animation: pulse 1.4s ease-in-out infinite alternate; animation-delay: 0.3s; }
                .bar:nth-child(19) { left: 92px; animation: pulse 1.1s ease-in-out infinite alternate; animation-delay: 0.4s; }
